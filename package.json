{
  "main": "index.html",
  "name": "ImageManagementTool",
  "description": "A tool for managing images",
  "version": "0.0.1",
  "window": {
    "title": "ImageManagementTool - by Philippe Schild",
    "icon": "link.png",
    "toolbar": true,
    "frame": true,
    "width": 1024,
    "height": 768,
    "position": "center",
    "min_width": 500,
    "min_height": 400,
    "max_width": 1920,
    "max_height": 1080
  },
  "webkit": {
    "plugin": true
  },
  "dependencies": {
    "body-parser": "~1.4.2",
    "express": "~4.5.1",
    "fs-extra": "~0.26.5",
    "method-override": "~2.0.2",
    "mongoose": "~4.4.4",
    "mysql": "^2.10.2",
    "nw": "^0.15.0",
    "promise-mysql": "^1.3.2",
    "promised-io": "latest",
    "randomstring": "latest",
    "sequelize": "^3.3.2",
    "sequelize-cli": "^1.7.1",
    "sqlite3": "^3.0.8",
    "underscore": "latest"
  },
  "devDependencies": {
    "bluebird": "^2.9.33",
    "expect.js": "^0.3.1",
    "mocha": "^2.2.5",
    "supertest": "^1.0.1",
    "nw-builder": "^2.x"
  },
  "scripts": {
    "start": "set NODE_ENV=development&& node server.js",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "set NODE_ENV=test&& mocha test/unit/*.test.js",
    "test-integration": "set NODE_ENV=test&& mocha test/integration/*.test.js",
    "nw": "set NODE_ENV=development&& nw ."
  }
}
